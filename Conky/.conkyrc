conky.config = {
    -------------------
    -- General Settings
    -------------------
    out_to_x = false,
    out_to_wayland = true,
    update_interval=5,
    update_interval_on_battery=60,
    total_run_times=0,
    cpu_avg_samples=2,
    net_avg_samples=2,
    override_utf8_locale=true,

    -------------------
    -- Text Settings
    -------------------
    use_xft=true,
    font="DejaVu Sans:size=8",
    xftalpha=0.8,
    text_buffer_size=2048,
    uppercase=false,
    default_color="#ffffff",

    -------------------
    -- Windows Settings
    -------------------
    own_window=true,
    own_window_type="normal",
    own_window_transparent=true,
    own_window_hints="undecorated,above,sticky,skip_taskbar,skip_pager",
    -- own_window_class="overwride",
    -- own_window_colour="111111",
    own_window_argb_visual = true,
    -- own_window_argb_value = 0,
    double_buffer=true,
    draw_shades=false,
    draw_outline=false,
    draw_borders=false,

    -------------------
    -- Windows Position and Size
    -------------------
    alignment="top_right",
    gap_x=0,
    gap_y=30,
    maximum_width=100,
    minimum_height=180,
    stippled_borders=0,
    border_outer_margin=0,
    border_width=1,
    no_buffers=true,
    use_spacer="none"
}

conky.text = [[
    SYSTEM ${hr 2}
    ${offset 24}${alignc}${font OpenLogos:size=50}J${font}
    DATE ${hr 2}
    ${offset 8}${alignc}${font Arial Black:size=18}${time %H:%M}${font}
    ${alignc}${time %a, %d}
    ${alignc}${time %B}
    ${alignc}${time %Y}

    LOAD ${hr 2}
    Battery: ${alignr}${battery_percent} %
    ${alignr}${battery_bar 8,60}
    ${alignr}(${battery_time})
    CPU: ${alignr}${cpu cpu0}% ${hwmon 2 temp 1}Â°C
    ${alignr}${cpubar cpu0 8,60}
    ${alignr}${freq_g 0}GHz
    RAM: $memperc%
    ${alignr}${membar 8,60}
    SWAP: $swapperc%
    ${alignr}${swapbar 8,60}

    PROCESSES ${hr 2}
    ${top name 1}
    ${top name 2}
    ${top name 3}
    ${top name 4}
    ${top name 5}

    HD ${hr 2}
    ${voffset 4}Root: ${alignr}${fs_used /}
    ${alignr}${fs_bar 8,60 /}
    ${voffset 4}Home: ${alignr}${fs_used /home}
    ${alignr}${fs_bar 8,60 /home}

    NETWORK ${hr 2}
    ${if_existing /proc/net/route wlp59s0}
    Up: ${upspeed wlp59s0}
    ${alignr}${upspeedgraph wlp59s0 8,60 black black}
    Down: ${downspeed wlp59s0}
    ${alignr}${downspeedgraph wlp59s0 8,60 black black}
    ${endif}
]]
